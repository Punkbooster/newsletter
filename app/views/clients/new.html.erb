<h1>New Client</h1>

<%= form_for @client do |form| %>
	<%= form.text_field :imie %> </br>

	
	<% if @client.errors.any? %>
	
	<ul>
		<% @client.errors.full_messages.each do |msg| %>
			<li> <%= msg %> </li>
			<% end %>
	</ul>
	<% end %>
	
	<%= form.text_field :nazwisko %> </br>
	<%= form.text_field :email %> </br>
	<%= form.submit %>
<% end %>

<%= link_to 'Back', clients_path %>

<h1>New letter</h1>

<%= form_for @letter do |form| %>
	<p><strong> Title: </strong> <%= form.text_field :title %> </p>

	
	<% if @letter.errors.any? %>
	
	<ul>
		<% @letter.errors.full_messages.each do |msg| %>
			<li> <%= msg %> </li>
			<% end %>
	</ul>
	<% end %>
	
	<p> <strong> Topic: </strong> <%= form.text_field :topic %> </p>
	<p> <strong> Content: </strong> <%= form.text_area :content %> </p>
	<%= form.submit %>
<% end %>

<%= link_to 'Back', letters_path %>

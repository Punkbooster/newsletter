<h1>New letter</h1>

<%= form_for @letter do |form| %>
	<%= form.text_field :title %> </br>

	
	<% if @letter.errors.any? %>
	
	<ul>
		<% @letter.errors.full_messages.each do |msg| %>
			<li> <%= msg %> </li>
			<% end %>
	</ul>
	<% end %>
	
	<%= form.text_field :topic %> </br>
	<%= form.text_field :content, class: 'wysihtml5' %> </br>
	<%= form.submit %>
<% end %>

<%= link_to 'Back', letters_path %>
